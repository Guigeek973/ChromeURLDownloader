{
  "manifest_version": 3,
  "name": "Web Url Content Downloader",
  "version": "1.0",
  "description": "Télécharge le contenu web à partir d'un CSV composé d'url",
  "permissions": ["activeTab", "storage", "downloads"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}